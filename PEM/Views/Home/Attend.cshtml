@using DevExtreme
@using DevExtreme.AspNet.Mvc
@using PEM.Models.ViewModels
@using PEM.Service

@{
    Layout = null; // _DevExtremeLayout;
}


@(Html.DevExtreme().DataGrid<Attend>()
    .DataSource(ds => ds.Mvc()
        .Controller("Home")
        .LoadAction("Get")
       .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("EmployeeId")
    )
    .RemoteOperations(true)
    .Columns(columns => {

        columns.AddFor(m => m.CompanyId);

        columns.AddFor(m => m.AttendanceDate);

        columns.AddFor(m => m.EmployeeId);

        
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
    )
)
